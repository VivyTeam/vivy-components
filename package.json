{
  "name": "@vivy/vivy-components",
  "version": "1.0.8",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git://github.com/UvitaTeam/vivy-components"
  },
  "license": "MIT",
  "files": [
    "/dist",
    "/public",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "linter:fix": "prettier --write '{,!(node_modules|.git|storybook-static)/**/}*.{js,json,jsx,md}'",
    "linter:check": "eslint src/**/* && eslint stories/*.jsx",
    "serve": "start-storybook -p 3006 -s ./public",
    "build:storybook": "storybook-to-ghpages",
    "build:static": "build-storybook -s public",
    "build:package": "babel --presets @babel/react ./src --out-dir ./dist",
    "test": "jest",
    "danger": "danger ci",
    "test:watch": "npm run test -- --watchAll"
  },
  "dependencies": {
    "async-validator": "^1.10.0",
    "copy-to-clipboard": "^3.0.8",
    "i18next": "^11.9.0",
    "i18next-browser-languagedetector": "^2.2.3",
    "prop-types": "^15.6.1",
    "react": "^16.6.3",
    "react-dom": "^16.2.0",
    "react-i18next": "^7.12.0",
    "react-input-mask": "2.0.4",
    "react-toastify": "^4.5.2",
    "styled-components": "4.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "7.3.0",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "@storybook/addon-actions": "v4.2.0-alpha.11",
    "@storybook/addon-info": "v4.2.0-alpha.11",
    "@storybook/addon-links": "v4.2.0-alpha.11",
    "@storybook/addon-options": "v4.2.0-alpha.11",
    "@storybook/addon-storyshots": "v4.2.0-alpha.11",
    "@storybook/addon-storyshots-puppeteer": "v4.2.0-alpha.11",
    "@storybook/addons": "v4.2.0-alpha.11",
    "@storybook/react": "v4.2.0-alpha.11",
    "@storybook/storybook-deployer": "^2.8.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "8.0.5",
    "babel-plugin-require-context-hook": "1.0.0",
    "babel-plugin-styled-components": "1.10.0",
    "danger": "7.0.2",
    "eslint": "^5.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.0.0",
    "jest-styled-components": "6.3.1",
    "prettier": "^1.16.3",
    "react-scripts": "^2.1.3",
    "react-test-renderer": "16.7.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg|ttf|woff|woff2|eot)$": "<rootDir>/.jest/assetsTransformer.js",
      "\\.(css)$": "<rootDir>/.jest/styleMock.js"
    },
    "setupFiles": [
      "<rootDir>/.jest/registerContext.js"
    ]
  }
}
